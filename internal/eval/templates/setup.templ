package templates

type SetupProps struct {
	Token string
}

templ Setup(props SetupProps) {
	<div class="space-y-6">
		<h2 class="text-2xl font-bold">Setup Configuration</h2>
		
		<div class="max-w-md mx-auto">
			@Card("") {
				<div class="p-6">
					<h3 class="text-xl font-semibold mb-6">OpenRouter API Token</h3>
					<form hx-post="/setup" hx-target="body" hx-swap="innerHTML">
						<div class="mb-4">
							<label for="token" class="block text-sm font-medium text-gray-700 mb-2">
								API Token
							</label>
							<input 
								type="password" 
								id="token" 
								name="token" 
								value={ props.Token }
								class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
								placeholder="sk-or-v1-..."
								required
							/>
							<p class="text-sm text-gray-500 mt-2">
								Get your API token from <a href="https://openrouter.ai/keys" target="_blank" class="text-blue-600 hover:text-blue-800">OpenRouter</a>
							</p>
						</div>
						<div>
							@PrimaryButton("Save Token")
						</div>
					</form>
				</div>
			}
		</div>
	</div>
}